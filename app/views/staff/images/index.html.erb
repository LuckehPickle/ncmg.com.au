<%- content_for :title, t('view.staff.images.index.title') %>
<%- content_for :canonical_url, staff_images_url %>

<div class="staff-area">
  <div class="wrapper">

    <%= render 'staff/shared/password_banner' %>

    <!-- Breadcrumbs -->
    <nav class="breadcrumbs">
      <ul>
        <li><%= link_to 'Staff Area', staff_root_path %></li>
        <li><%= link_to 'Images', staff_images_path %></li>
      </ul>
    </nav>

    <div class="head-and-button">

      <!-- Header -->
      <div>
        <span class="subheading">Staff Controls</span>
        <h1>Images</h1>
        <p>This section provides complete control over the images that appear in the image gallery.</p>
      </div>

      <!-- Button -->
      <div>
        <%= link_to new_staff_image_path, class: 'button' do %>
          <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="24px"
               height="24px" viewBox="0 0 24 24" enable-background="new 0 0 24 24" xml:space="preserve" class="material-icons" style="margin-left: -2px;">
            <g id="Bounding_Boxes"><path fill="none" d="M0,0h24v24H0V0z"></path></g>
            <g id="Rounded">
              <path d="M19.35,10.04C18.67,6.59,15.64,4,12,4C9.11,4,6.6,5.64,5.35,8.04C2.34,8.36,0,10.91,0,14c0,3.31,2.69,6,6,6h13
          		c2.76,0,5-2.24,5-5C24,12.36,21.95,10.22,19.35,10.04z M14,13v4h-4v-4H7l4.65-4.65c0.2-0.2,0.51-0.2,0.71,0L17,13H14z"></path>
            </g>
          </svg>
          <span>Upload images</span>
        <% end %>
      </div>

    </div>

    <div class="images-header">

      <!-- Hint -->
      <div class="hint">
        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="24px"
             height="24px" viewBox="0 0 24 24" enable-background="new 0 0 24 24" xml:space="preserve">
          <g id="Bounding_Boxes" display="none">
            <g id="ui_x5F_spec_x5F_header_copy_3" display="inline">
            </g>
            <path display="inline" fill="none" d="M0,0h24v24H0V0z"></path>
          </g>
          <g id="Rounded">
            <g id="ui_x5F_spec_x5F_header_copy_5">
            </g>
            <path d="M12,7L12,7c0.55,0,1,0.45,1,1v4c0,0.55-0.45,1-1,1h0c-0.55,0-1-0.45-1-1V8C11,7.45,11.45,7,12,7z M11.99,2
                		C6.47,2,2,6.48,2,12s4.47,10,9.99,10C17.52,22,22,17.52,22,12S17.52,2,11.99,2z M12,20c-4.42,0-8-3.58-8-8s3.58-8,8-8s8,3.58,8,8
                		S16.42,20,12,20z M13,17h-2v-2h2V17z"></path>
          </g>
        </svg>
        <p>Hint: Click any image to edit</p>
      </div>

    </div>

    <div class="images">
      <%= render @images %>
    </div>

    <%= paginate @images %>
    <p class="pagination-info"><%= page_entries_info @images %></p>

  </div>
</div>