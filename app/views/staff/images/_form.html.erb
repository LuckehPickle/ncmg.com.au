<%= form_with model: @image, url: staff_image_path(@image), class: 'js-form' do |form| %>

  <!-- Title -->
  <div class="field">
    <%= form.label :title %><br/>
    <%= form.text_field :title, autofocus: true %>
  </div>

  <!-- Labels -->
  <div class="field">
    <%= form.label :labels %><br/>
    <%= form.text_field :labels %>
  </div>

  <!-- Options -->
  <div class="field">
    <h2>Options</h2>
    <%= form.check_box :featured %><%= form.label :featured %><br/>
    <%= form.check_box :hidden %><%= form.label :hidden %>
  </div>

  <!-- Submit -->
  <div class="actions">
    <%= form.submit class: 'button' %>
  </div>

<% end %>