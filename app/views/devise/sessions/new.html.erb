<%- content_for :title, t('view.auth.login.title') %>
<%- content_for :description, t('view.auth.login.description') %>
<%- content_for :canonical_url, new_staff_member_session_url %>

<div class="auth inverted">
  <div class="wrapper">
    <span class="subheading">Welcome back</span>
    <h1>Staff Login</h1>

    <%= form_for(resource, as: resource_name, url: staff_member_session_path) do |f| %>
      <div class="field">
        <%= f.label :email %><br/>
        <%= f.email_field :email, autofocus: true, placeholder: 'e.g. john@example.com', spellcheck: false, autocomplete: 'email' %>
      </div>

      <div class="field">
        <%= f.label :password %><br/>
        <%= f.password_field :password, autocomplete: 'off' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit 'Log me in', class: 'button wide' %>
      </div>

      <p><%= link_to 'Forgot your password?', new_staff_member_password_path, class: 'anchor' %></p>
    <% end %>
  </div>

  <div class="dot-matrix dots-1"></div>
  <div class="dot-matrix dots-2"></div>
</div>
