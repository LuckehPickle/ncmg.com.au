<%- content_for :title, t('view.staff.images.edit.title') %>
<%- content_for :canonical_url, staff_images_url %>

<div class="staff-area">
  <div class="wrapper">

    <%= render 'staff/shared/password_banner' %>

    <!-- Breadcrumbs -->
    <nav class="breadcrumbs">
      <ul>
        <li><%= link_to 'Staff Area', staff_root_path %></li>
        <li><%= link_to 'Images', staff_images_path %></li>
        <li><%= link_to 'Edit Image', edit_staff_image_path(@image) %></li>
      </ul>
    </nav>

    <!-- Header -->
    <span class="subheading">Staff Controls</span>
    <h1>Edit Image</h1>

    <hr/>

    <div class="js-form-wrapper">
      <%= render 'form' %>
    </div>

    <div class="danger-zone">
      <h2>Danger Zone</h2>
      <p>The following actions can be potentially dangerous, and may result in unforeseen consequences. Continue at your own risk.</p>
      <div class="buttons">
        <%= link_to "Delete #{@image.title}", staff_image_path(@image), class: 'button danger', method: :delete, data: { confirm: 'Are you sure you wish to delete this image? This action cannot be undone.', disable: true }, remote: true %>
      </div>
    </div>
  </div>
</div>