<%- content_for :title, t('view.staff.messages.show.title') %>
<%- content_for :canonical_url, staff_messages_url %>

<div class="staff-area">
  <div class="wrapper">
    <%= render 'staff/shared/password_banner' %>

    <!-- Breadcrumbs -->
    <nav class="breadcrumbs">
      <ul>
        <li><%= link_to 'Staff Area', staff_root_path %></li>
        <li><%= link_to 'Message History', staff_messages_path %></li>
        <li><%= link_to 'Read Message', staff_message_path(@message) %></li>
      </ul>
    </nav>

    <div class="head-and-button">
      <!-- Header -->
      <div>
        <span class="subheading">Staff Controls</span>
        <h1>Read Message</h1>
      </div>

      <!-- Button -->
      <div>
        <%= link_to staff_message_path(@message), class: 'button', method: :delete, data: { confirm: 'Are you sure you want to delete this message? This action cannot be undone.' } do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="material-icons" style="margin-left: -3px"><path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V9c0-1.1-.9-2-2-2H8c-1.1 0-2 .9-2 2v10zM18 4h-2.5l-.71-.71c-.18-.18-.44-.29-.7-.29H9.91c-.26 0-.52.11-.7.29L8.5 4H6c-.55 0-1 .45-1 1s.45 1 1 1h12c.55 0 1-.45 1-1s-.45-1-1-1z"/></svg>
          <span>Delete Spam</span>
        <% end -%>
      </div>
    </div>

    <hr/>

    <div class="message-header">
      <p><strong>From:</strong> <%= @message.name %> &lt;<%= @message.email %>&gt;</p>
      <p><strong>Sent:</strong> <%= local_time_ago @message.created_at %></p>
    </div>

    <pre class="message-body"><%= @message.body %></pre>
  </div>
</div>
